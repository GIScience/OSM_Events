<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="grid.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">
        <property name="igniteInstanceName" value="ohsome" />
        <!-- Explicitly enable peer class loading. -->
        <property name="peerClassLoadingEnabled" value="true"/>
        <property name="clientMode" value="true" />
        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
                <property name="ipFinder">
                    <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                        <property name="addresses">
                            <list>
                                <value>worker-01.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-02.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-03.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-04.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-05.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-06.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-07.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-08.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-09.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-10.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-11.dev.cloud-internal.ohsome.org:47500..47509</value>
                                <value>worker-12.dev.cloud-internal.ohsome.org:47500..47509</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
</beans>
